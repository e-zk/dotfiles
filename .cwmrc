# cwmrc

# fonts
#fontname "Monoid:size=9"
fontname "Inconsolata:size=12"

# colors
color menubg "#ffffff"
color font "#000000"
color menufg "#d9dada"
color selfont "#000000"
color activeborder "#ffffff"
#color activeborder "#101a1f"
color inactiveborder "#101010"
#color inactiveborder "#000a0f"

# border
borderwidth 3

# gaps
gap 20 80 20 20

# snapping
snapdist 6

# application menu
command term "xterm -g 80x20"
command lock "xlock -mode blank +description"
command top "xterm -g 80x24 -e top"
command "firefox" "firefox-esr --no-remote --new-instance"
command "firefox (uni)" "firefox-esr --new-instance -P Uni"
command "firefox (dev)" "firefox-esr --new-instance -P development"
command "firefox (temporary)" "tmpfox" 
command "gcolor" gcolor2
command "gimp" gimp
command "qbittorrent" qbittorrent
command "zathura" zathura

# auto groups
autogroup 1 "xterm", "XTerm"
autogroup 2 "Navigator", "Firefox"
autogroup 3 "org.pwmt.zathura", "Zathura"
autogroup 4 "Xephyr", "Xephyr"
autogroup 5 "nowplaying", "mpv"

# keys 


bind-key 4-Up pointer-move-up-big
bind-key 4-Down pointer-move-down-big
bind-key 4-Left pointer-move-left-big
bind-key 4-Right pointer-move-left-big


bind-key 4-l lock
bind-key 4-g "center.sh md"
bind-key 4-r "center.sh tl"
bind-key 4-t "center.sh tr"
bind-key 4-v "center.sh bl"
bind-key 4-b "center.sh br"

bind-key M-p "power"

bind-key XF86AudioLowerVolume "soundbar"
bind-key XF86AudioRaiseVolume "soundbar"
bind-key XF86AudioMute "soundbar" 


# wm
wm fvwm2 /usr/X11R6/bin/fvwm
