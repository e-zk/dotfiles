#!/bin/ksh
# |/ /_ |_| |_\ /
# |\  / | | | \ \
# ~/etc/kshrc : ksh initialisation

# vi mode baby
set -o vi

# prompt
_prompt() {
	exit_code="$?"

	if [ "$(pwd)" != "$HOME" ]; then
		printf '\033[38m%s' "$(basename "$(pwd)")"
	else
		printf '\033[0m'
	fi

	# exit code
	if [ "$exit_code" -eq "0" ]; then
		printf '\033[90m'
	else
		printf '\033[31m'
	fi

	# root ?
	if [ $(id -u) -ne 0 ]; then
		printf '$'
	else
		printf '#'
	fi
	printf '\033[0m'
}
export PS1='$(_prompt) '

# variables
export ETC=${HOME}/etc
export XDG_CONFIG_HOME=${ETC}
export XDG_CACHE_HOME=${HOME}/var

# shortenings
alias f='finger'
alias h='history -r | less'
alias j='jobs -l'
alias p='ps'

# ls
alias ls='ls -F'
alias la='ls -AF'
alias ll='ls -AlFh'
alias l='ls -Fhl'

# mv
alias mv='mv -iv'
alias cp='cp -iv'
alias rm='rm -iv'

# useful aliases
alias \!\!='$(fc -l | tail -1 | cut -f 2)'
alias popd='cd -'

# OS specific configuration
if [ $(id -u) -ne 0 ]; then
	case "$(uname -s)" in
		OpenBSD) . $HOME/etc/kshrc.openbsd ;;
		Linux)   . $HOME/etc/kshrc.wsl     ;;
	esac
fi

# setup a tmux session for "development"
setupdev() {
	tmux new-session -d
	tmux split-window -v
	tmux new-window
	tmux previous-window
	tmux attach-session -d
}

# make a quick backup of a file 
# usage: bak <file>
bak() {
	cp -vr "$1" "${1}.bak"
}

# generate a quick filename (current date)
fname() {
	date '+%b.%d-%H%M'
}

# new blog post
blog() {
	title="${1:-title}"
	date="$(date '+%F')"
	vise "${HOME}/usr/txt/${date}-${title}.md"
}

# make a dir and cd into it
mkcd() {
	if [ $# -lt 1 ]; then 
		echo "insufficient arguments given..."
		return 1
	fi

	eval local path=\$$#

	mkdir $@
	cd "$path"
}

# shh...
if [ $(id -u) -ne 0 ]; then
	. ~/.secrets
fi
