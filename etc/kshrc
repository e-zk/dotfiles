#!/bin/ksh
# |/ /_ |_| |_\ /
# |\  / | | | \ \
# ~/etc/kshrc : ksh initialisation

# vi mode baby
set -o vi

# prompt
_prompt() {
	exit_code="$?"

	if [ "$(pwd)" != "$HOME" ]; then
		printf '\033[38m%s' "$(basename "$(pwd)")"
	else
		printf '\033[0m'
	fi

	# exit code
	if [ "$exit_code" -eq "0" ]; then
		printf '\033[90m'
	else
		printf '\033[31m'
	fi

	# root ?
	if [ $(id -u) -ne 0 ]; then
		printf '$'
	else
		printf '#'
	fi
	printf '\033[0m'
}
export PS1='$(_prompt) '

# variables
export VIS_PATH="$HOME/etc/vis"

# alias
alias \!\!='$(fc -l | tail -1 | cut -f 2)'
alias f='finger'
alias gls='git status -s'
alias h='history -r | less'
alias j='jobs -l'
alias la='ls -a'
alias l='ls -Fhl'
alias ll='ls -AFhl'
alias mv='mv -i'
alias p='ps'
alias rm='rm -i'

# OS specific configuration
if [ $(id -u) -ne 0 ]; then
	case "$(uname -s)" in
		OpenBSD) . $HOME/etc/kshrc.openbsd   ;;
		Linux)   . $HOME/etc/kshrc.alpinewsl ;;
	esac
fi

# setup a tmux session for "development"
setupdev() {
	tmux new-session -d
	tmux split-window -v
	tmux new-window
	tmux previous-window
	tmux attach-session -d
}

# oopsie
dosa() {
	echo "yum!"
	doas "$@"
}

# make a quick backup of a file 
# usage: bak <file>
bak() {
	cp -vr "$1" "${1}.bak"
}

# generate a quick filename (current date)
fname() {
	echo "`date '+%b.%d-%H%M'`"
}

# new blog post
blog() {
	title="${1:-title}"
	date="$(date '+%F')"
	vise "${HOME}/usr/txt/${date}-${title}.md"
}

# make a dir and cd into it
mkcd() {
	if [ $# -lt 1 ]; then 
		echo "insufficient arguments given..."
		return 1
	fi

	eval local path=\$$#

	mkdir $@
	cd "$path"
}

# shh...
if [ $(id -u) -ne 0 ]; then
	. ~/.secrets
fi
